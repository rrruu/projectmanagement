<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.projectmanagement.controller.ScheduleShowController"
            prefHeight="300.0" prefWidth="400.0"
            style="-fx-padding: 20;">

    <VBox spacing="15">
        <!-- 标题 -->
        <Label text="日程详情" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <!-- 详情内容 -->
        <GridPane hgap="10" vgap="10">
            <Label text="标题:"/>
            <Label fx:id="titleLabel" GridPane.columnIndex="1"/>

            <Label text="开始时间:" GridPane.rowIndex="1"/>
            <Label fx:id="startDateLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="结束时间:" GridPane.rowIndex="2"/>
            <Label fx:id="endDateLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="内容:" GridPane.rowIndex="3"/>
        </GridPane>

        <!-- 内容区域 -->
        <ScrollPane fitToWidth="true" prefHeight="120">
            <TextArea fx:id="contentArea" wrapText="true" editable="false"/>
        </ScrollPane>

        <!-- 关闭按钮 -->
        <Button text="关闭" onAction="#handleClose"
                style="-fx-pref-width: 80px; -fx-font-weight: bold;"/>
    </VBox>
</AnchorPane>