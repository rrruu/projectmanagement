<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.canvas.Canvas?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.projectmanagement.controller.ResourceManagementController"
            style="-fx-padding: 20;">

    <VBox spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <HBox spacing="10" style="-fx-padding: 10;">
            <Button text="添加资源" styleClass="mainButton" onAction="#handleAddResource"/>
            <Button text="编辑资源" styleClass="mainButton" onAction="#handleEditResource"/>
            <Button text="删除资源" styleClass="mainButton" onAction="#handleDeleteResource"/>
            <Button text="关联任务" styleClass="mainButton" onAction="#handleLinkTasks"/>
        </HBox>

        <TableView fx:id="resourceTable" prefHeight="200">
            <columns>
                <TableColumn fx:id="nameColumn" text="名称" prefWidth="150"/>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="150"/>
                <TableColumn fx:id="phoneColumn" text="电话" prefWidth="150"/>
                <TableColumn fx:id="emailColumn" text="邮箱" prefWidth="150"/>
                <TableColumn fx:id="typeColumn" text="类型" prefWidth="100"/>
                <TableColumn fx:id="rateColumn" text="单价/天" prefWidth="150"/>
                <TableColumn fx:id="statusColumn" text="状态" prefWidth="150"/>
                <TableColumn fx:id="commentColumn" text="备注" prefWidth="150"/>
            </columns>
        </TableView>

        <!-- 新增资源甘特图区域 -->
        <Label text="资源使用情况" style="-fx-font-weight: bold; -fx-padding: 10 0 5 0;"/>
        <ScrollPane fx:id="resourceGanttScrollPane"
                    fitToWidth="true"
                    fitToHeight="true"
                    hvalue="0.0"
                    vvalue="0.0"
                    style="-fx-border-color: #cccccc;">
            <content>
                <Canvas fx:id="resourceGanttCanvas"/>
            </content>
        </ScrollPane>


    </VBox>
</AnchorPane>