<BorderPane style="-fx-background-color: #ECF1F5" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projectmanagement.controller.MainFrameController">

    <left>
        <!-- 导航栏 -->
        <VBox spacing="20" style="-fx-padding: 20 0 20 0; -fx-background-color: #BDD0DE;-fx-pref-width: 200;">

            <children>
   
               <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="项目管理工具" />
               <Button onAction="#loadGanttModule" styleClass="navButtonMain" style="-fx-background-color: #ECF1F5;-fx-text-fill: #52708c;-fx-pref-height: 50;-fx-background-radius: 0px;-fx-font-size: 15px;" text="任务管理" maxWidth="Infinity">
                   <VBox.margin>
                       <Insets top="50" />
                   </VBox.margin>
               </Button>
               <Button onAction="#loadResourceModule" styleClass="navButtonMain" text="资源管理" maxWidth="Infinity"/>
               <Button onAction="#loadResourceAnalysisModule" styleClass="navButtonMain" text="资源统计分析" maxWidth="Infinity"/>
               <Button onAction="#loadScheduleModule" styleClass="navButtonMain" text="个人日程安排" maxWidth="Infinity"/>
           </children>
        </VBox>
    </left>

    <center>
        <!-- 内容区域 -->
        <StackPane fx:id="contentPane" />
    </center>

</BorderPane>
