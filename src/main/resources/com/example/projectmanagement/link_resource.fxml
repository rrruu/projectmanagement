<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.projectmanagement.controller.LinkResourceController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="选择要关联的资源:"/>
        <ListView fx:id="resourceListView" prefHeight="400"/>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="确认" onAction="#handleConfirm"/>
            <Button text="取消" onAction="#handleCancel"/>
        </HBox>
    </VBox>
</AnchorPane>
